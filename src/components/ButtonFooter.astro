---
import { joinClasses } from "../utils/joinClasses";
import { replaceUrls } from "../utils/replaceUrls";
type Props = {
  styles: string;
  classes: string;
  url?: string;
  content: string;
};
const { classes, styles, url, content } = Astro.props;
const href = replaceUrls(url || "#", Astro.url.host);
const buttonClasses = joinClasses(
  "button-footer inline-block uppercase font-bold tracking-[1.3px] bg-blue-light rounded-full",
  classes,
);
---

<button type="button" class={buttonClasses} style={styles}>
  <a href={href} set:html={content} />
</button>
