---
import { replaceUrls } from "../utils/replaceUrls";

type Props = {
  styles?: string;
  backgroundColor: string;
  textColor?: string;
  classes?: string;
  url?: string;
  content: string;
};
const { backgroundColor, url, content } = Astro.props;

const href = replaceUrls(url || "#", Astro.url.host);
